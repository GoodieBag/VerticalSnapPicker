<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <in.goodiebag.verticalsnappicker.VerticalSnapPicker
        android:id="@+id/picker"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#ccc"
        app:default_text_color="#00ff00"
        app:highlight_line_color="#ff0000"
        app:highlight_line_side_margin="25dp"
        app:highlight_line_thickness="1dp"
        app:item_height="100dp"
        app:item_vertical_offset="200dp"
        app:selected_text_color="#0000ff"
        app:text_size="14sp" />

</RelativeLayout>